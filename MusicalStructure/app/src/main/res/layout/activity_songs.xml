<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.musicalstructure.br.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="@dimen/medium_margin">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/medium_margin"
            android:text="@string/description_songs"
            android:textAlignment="center"
            android:textSize="@dimen/font_title"
            android:textStyle="bold" />

        <RelativeLayout
            android:id="@+id/viewSong1"
            style="@style/SongStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent">

            <TextView
                android:id="@+id/song1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/font_song" />

            <TextView
                android:id="@+id/timeSong1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/font_time" />

            <TextView
                android:id="@+id/album1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/song1"
                android:layout_marginLeft="@dimen/medium_margin"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/font_album" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/viewSong2"
            style="@style/SongStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorLightOrange">

            <TextView
                android:id="@+id/song2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/font_song" />

            <TextView
                android:id="@+id/timeSong2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/font_time" />

            <TextView
                android:id="@+id/album2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/song2"
                android:layout_marginLeft="@dimen/medium_margin"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/font_album" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/viewSong3"
            style="@style/SongStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent">

            <TextView
                android:id="@+id/song3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/font_song" />

            <TextView
                android:id="@+id/timeSong3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/font_time" />

            <TextView
                android:id="@+id/album3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/song3"
                android:layout_marginLeft="@dimen/medium_margin"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/font_album" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/viewSong4"
            style="@style/SongStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorLightOrange">

            <TextView
                android:id="@+id/song4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/font_song" />

            <TextView
                android:id="@+id/timeSong4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/font_time" />

            <TextView
                android:id="@+id/album4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/song4"
                android:layout_marginLeft="@dimen/medium_margin"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/font_album" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/viewSong5"
            style="@style/SongStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent">

            <TextView
                android:id="@+id/song5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/font_song" />

            <TextView
                android:id="@+id/timeSong5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/font_time" />

            <TextView
                android:id="@+id/album5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/song5"
                android:layout_marginLeft="@dimen/medium_margin"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/font_album" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/viewSong6"
            style="@style/SongStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorLightOrange">

            <TextView
                android:id="@+id/song6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/font_song" />

            <TextView
                android:id="@+id/timeSong6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/font_time" />

            <TextView
                android:id="@+id/album6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/song6"
                android:layout_marginLeft="@dimen/medium_margin"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/font_album" />

        </RelativeLayout>

    </LinearLayout>
</ScrollView>